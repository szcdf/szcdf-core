###############################################################################
#
# Package: szcdf-core
# Author: Stephen Zhao (mail@zhaostephen.com)
# Type: SZCDF Install Spec

# === Installer ===
COPY bin/szcdfi.sh $HOME/.local/bin/szcdfi.sh

# === bootstrapping ===
COPY src/core-bootstrapper/_bootstrap.sh $CONFIG_ROOT/_bootstrap.sh

# === SZCDF core modules ===
COPYALL src/core-modules $CONFIG_ROOT/modules

# === SZCDF core profiles ===
COPYALL src/core-profiles $CONFIG_ROOT/profiles

# === SZCDF core presets ===
COPYALL src/core-presets $CONFIG_ROOT/presets

# === SZCDF entries ===
# Add entrypoint calls to all appropriate bash run-command scripts
PREPENDTEXT src/core-entries/entry-bash.sh $HOME/.profile ENTRY-BASH
PREPENDTEXT src/core-entries/entry-bash.sh $HOME/.bash_profile ENTRY-BASH
PREPENDTEXT src/core-entries/entry-bash.sh $HOME/.bashrc ENTRY-BASH

# === SZCDF core bins ===
COPYALL src/core-bin $CONFIG_ROOT/bin

# === SZCDF core data ===
COPYALL src/core-data $CONFIG_ROOT/data

# === SZCDF vimconfig ===
COPY src/vimconfig/vimrc $CONFIG_ROOT/vimconfig/vimrc
COPYALL src/vimconfig/profile.d $CONFIG_ROOT/vimconfig/profile.d

